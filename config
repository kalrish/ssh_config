# man:ssh_config(5)
# https://man.openbsd.org/ssh_config.5


Include own/config

Match exec "test x${SSH_TMUX} = x1" !originalhost *.git
	RemoteCommand if ! tmux attach ; then tmux ; fi
	RequestTTY force

Match all
	AddKeysToAgent yes
	Compression no
	ConnectTimeout 6
	UserKnownHostsFile ~/.ssh/known_hosts.d/%h
